<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">  
<struts>  
    <constant name="struts.i18n.encoding" value="UTF-8"/>  
    <!-- 指定默认编码集 ，作用于HttpServletRequest的setCharacterEncoding（）和freemarker，vilocity的输出 -->  
    <constant name="struts.configuration.xmlreload" value="true"/>  
    <!-- 当struts配置文件修改时是否自动加载 -->  
    <constant name="struts.devMode" value="true"/>  
    <!-- 开发模式下打印详细的错误信息 -->  
    <constant name="struts.ui.theme" value="xhtml"/>
	<constant name="struts.custom.i18n.resources" value="messageResource"></constant>  
    <constant name = "sruts.multipart.maxsize" value ="1024"/>
   
   
    <include file="struts-config/struts-user.xml"></include>
    <include file="struts-config/struts-note.xml"></include>
    <include file="struts-config/struts-notice.xml"></include>
    <include file="struts-config/struts-vote.xml"></include>
  
</struts>  